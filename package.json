{
  "name": "nextjs-boilerplate",
  "private": true,
  "engines": {
    "node": "22.17.1"
  },
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "postinstall": "node .husky/install.mjs && npx msw init",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm lint:next && pnpm lint:biome",
    "lint:next": "next lint --fix",
    "lint:biome": "biome check --write",
    "lint:biome:unsafe": "pnpm lint:biome --unsafe",
    "knip": "knip --cache",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:update": "vitest run --update",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic",
    "generate-api": "npx @openapitools/openapi-generator-cli generate -i openapi.yml -g typescript-fetch -o ./src/api/openapi -c openapiconfig.json --openapi-normalizer SET_TAGS_FOR_ALL_OPERATIONS=default",
    "generate-api:clean": "rm -rf src/api/openapi && pnpm generate-api"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "bash -c \"pnpm knip\"",
      "bash -c \"pnpm check-types\"",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "5.1.1",
    "@lukemorales/query-key-factory": "1.3.4",
    "@radix-ui/react-dialog": "1.1.14",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-slot": "1.2.3",
    "@tanstack/react-query": "5.83.0",
    "@tanstack/react-query-devtools": "5.83.0",
    "hono": "4.8.8",
    "lodash-es": "4.17.21",
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.61.1",
    "react-use": "17.6.0",
    "tailwind-variants": "1.0.0",
    "type-fest": "4.41.0",
    "zod": "4.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@eslint/eslintrc": "3.3.1",
    "@faker-js/faker": "9.9.0",
    "@next/bundle-analyzer": "15.4.4",
    "@next/env": "15.4.4",
    "@storybook/addon-a11y": "9.0.18",
    "@storybook/addon-docs": "9.0.18",
    "@storybook/addon-vitest": "9.0.18",
    "@storybook/nextjs-vite": "9.0.18",
    "@tailwindcss/postcss": "4.1.11",
    "@tanstack/eslint-plugin-query": "5.81.2",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/lodash-es": "4.17.12",
    "@types/node": "24.1.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.7.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "1.3.4",
    "axe-core": "4.10.3",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "chromatic": "13.1.2",
    "eslint": "9.32.0",
    "eslint-config-next": "15.4.4",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-storybook": "9.0.18",
    "husky": "9.1.7",
    "jest-extended": "6.0.0",
    "jsdom": "26.1.0",
    "knip": "5.62.0",
    "lint-staged": "16.1.2",
    "msw": "2.10.4",
    "msw-storybook-addon": "2.0.5",
    "playwright": "1.54.1",
    "storybook": "9.0.18",
    "tailwindcss": "4.1.11",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "msw": {
    "workerDirectory": "./public"
  }
}
