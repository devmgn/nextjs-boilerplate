{
  "name": "nextjs-boilerplate",
  "private": true,
  "engines": {
    "node": "22.20.0"
  },
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "postinstall": "pnpm init:husky && pnpm init:msw",
    "init:husky": "node .husky/install.mjs",
    "init:msw": "msw init",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm lint:eslint && pnpm lint:biome",
    "lint:eslint": "eslint --fix",
    "lint:biome": "biome check --write",
    "lint:biome:unsafe": "pnpm lint:biome --unsafe",
    "lint:knip": "knip --cache && knip --strict --cache",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:update": "vitest run --update",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic",
    "generate-api": "npx @openapitools/openapi-generator-cli generate -i openapi.yml -g typescript-fetch -o ./src/api/openapi -c openapiconfig.json --openapi-normalizer SET_TAGS_FOR_ALL_OPERATIONS=default",
    "generate-api:clean": "rm -rf src/api/openapi && pnpm generate-api"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "bash -c \"pnpm lint:knip\"",
      "bash -c \"pnpm check-types\"",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@lukemorales/query-key-factory": "1.3.4",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-presence": "1.1.5",
    "@radix-ui/react-slot": "1.2.3",
    "@tanstack/react-query": "5.90.5",
    "@tanstack/react-query-devtools": "5.90.2",
    "es-toolkit": "1.40.0",
    "hono": "4.10.0",
    "next": "15.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "7.65.0",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "3.1.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@eslint/eslintrc": "3.3.1",
    "@faker-js/faker": "10.1.0",
    "@next/bundle-analyzer": "15.5.6",
    "@next/env": "15.5.6",
    "@next/eslint-plugin-next": "15.5.6",
    "@storybook/addon-a11y": "10.0.0-beta.12",
    "@storybook/addon-docs": "10.0.0-beta.12",
    "@storybook/addon-vitest": "10.0.0-beta.12",
    "@storybook/nextjs-vite": "10.0.0-beta.12",
    "@tailwindcss/postcss": "4.1.14",
    "@tanstack/eslint-plugin-query": "5.91.2",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.0.4",
    "@vitest/browser": "4.0.0-beta.18",
    "@vitest/browser-playwright": "4.0.0-beta.18",
    "@vitest/coverage-v8": "4.0.0-beta.18",
    "@vitest/eslint-plugin": "1.3.20",
    "axe-core": "4.11.0",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "chromatic": "13.3.0",
    "eslint": "9.37.0",
    "eslint-config-next": "15.5.6",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "7.0.0",
    "eslint-plugin-storybook": "10.0.0-beta.12",
    "husky": "9.1.7",
    "jest-extended": "6.0.0",
    "jsdom": "27.0.0",
    "knip": "5.66.0",
    "lint-staged": "16.2.4",
    "msw": "2.11.5",
    "msw-storybook-addon": "2.0.6",
    "playwright": "1.56.1",
    "storybook": "10.0.0-beta.12",
    "tailwindcss": "4.1.14",
    "type-fest": "5.1.0",
    "typescript": "5.9.3",
    "vitest": "4.0.0-beta.18"
  },
  "msw": {
    "workerDirectory": "./public"
  }
}
