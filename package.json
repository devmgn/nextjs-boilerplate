{
  "name": "nextjs-boilerplate",
  "private": true,
  "engines": {
    "node": "22.19.0"
  },
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "postinstall": "node .husky/install.mjs && npx msw init",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm lint:eslint && pnpm lint:biome",
    "lint:eslint": "eslint --fix",
    "lint:biome": "biome check --write",
    "lint:biome:unsafe": "pnpm lint:biome --unsafe",
    "knip": "knip --cache",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:update": "vitest run --update",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic",
    "generate-api": "npx @openapitools/openapi-generator-cli generate -i openapi.yml -g typescript-fetch -o ./src/api/openapi -c openapiconfig.json --openapi-normalizer SET_TAGS_FOR_ALL_OPERATIONS=default",
    "generate-api:clean": "rm -rf src/api/openapi && pnpm generate-api"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "bash -c \"pnpm knip\"",
      "bash -c \"pnpm check-types\"",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.1",
    "@lukemorales/query-key-factory": "1.3.4",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-slot": "1.2.3",
    "@tanstack/react-query": "5.85.5",
    "@tanstack/react-query-devtools": "5.85.5",
    "es-toolkit": "1.39.10",
    "hono": "4.9.4",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "7.62.0",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "3.1.0",
    "type-fest": "4.41.0",
    "zod": "4.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@eslint/eslintrc": "3.3.1",
    "@faker-js/faker": "10.0.0",
    "@next/bundle-analyzer": "15.5.2",
    "@next/env": "15.5.2",
    "@next/eslint-plugin-next": "15.5.2",
    "@storybook/addon-a11y": "9.1.3",
    "@storybook/addon-docs": "9.1.3",
    "@storybook/addon-vitest": "9.1.3",
    "@storybook/nextjs-vite": "9.1.3",
    "@tailwindcss/postcss": "4.1.12",
    "@tanstack/eslint-plugin-query": "5.83.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.3.0",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.8",
    "@vitejs/plugin-react": "5.0.2",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "1.3.4",
    "axe-core": "4.10.3",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "chromatic": "13.1.3",
    "eslint": "9.34.0",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "9.1.3",
    "husky": "9.1.7",
    "jest-extended": "6.0.0",
    "jsdom": "26.1.0",
    "knip": "5.63.0",
    "lint-staged": "16.1.5",
    "msw": "2.11.1",
    "msw-storybook-addon": "2.0.5",
    "playwright": "1.55.0",
    "storybook": "9.1.3",
    "tailwindcss": "4.1.12",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "msw": {
    "workerDirectory": "./public"
  }
}
