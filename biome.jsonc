{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["public", "src/api/openapi"],
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off",
        "noConsole": {
          "level": "warn",
          "options": { "allow": ["error", "warn"] }
        },
        // deprecatedなので将来的に削除すること
        "noConsoleLog": "off"
      },
      // @see https://biomejs.dev/linter/rules/#nursery
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "cva", "tv", "tw"]
          }
        }
      }
    }
  },
  "overrides": [
    {
      // tsxはReactをグローバル変数として許容
      "include": ["*.d.ts", "*.tsx"],
      "javascript": { "globals": ["React"] }
    },
    {
      "include": [
        "*.d.ts",
        "default.tsx",
        "error.tsx",
        "forbidden.tsx",
        "global-error.tsx",
        "layout.tsx",
        "loading.tsx",
        "not-found.tsx",
        "page.tsx",
        "unauthorized.tsx"
      ],
      "linter": { "rules": { "style": { "noDefaultExport": "off" } } }
    },
    {
      "include": ["*.stories.*", "*.test.*", "*.spec.*"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off",
            "useFilenamingConvention": "off"
          },
          "suspicious": {
            "noConsole": "off",
            "noConsoleLog": "off",
            "noEmptyBlockStatements": "off"
          }
        }
      }
    },
    {
      // testファイルはvitestのグローバル変数を許容
      "include": ["*.spec.tsx", "*.spec.ts", "*.test.tsx", "*.test.ts"],
      "javascript": {
        "globals": [
          "afterAll",
          "afterEach",
          "beforeAll",
          "beforeEach",
          "describe",
          "expect",
          "expectTypeOf",
          "it",
          "test",
          "vi"
        ]
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
