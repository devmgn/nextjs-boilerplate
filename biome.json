{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["public", "src/components/ui"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off",
        "useFilenamingConvention": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "cva", "tw"]
          }
        }
      }
    }
  },
  "javascript": {
    "globals": ["React", "jest"]
  },
  "overrides": [
    {
      "include": ["*.test.ts", "*.test.tsx"],
      "linter": {
        "rules": {
          "suspicious": { "noEmptyBlockStatements": "off" },
          "correctness": { "noUndeclaredVariables": "off" }
        }
      }
    },
    {
      "include": [
        "default.tsx",
        "error.tsx",
        "layout.tsx",
        "loading.tsx",
        "not-found.tsx",
        "page.tsx",
        "*.stories*.tsx",
        ".storybook/",
        "*.d.ts",
        "tailwind.config.ts",
        "next.config.mjs",
        ".svgrrc.mjs",
        "__mocks__/"
      ],
      "linter": {
        "rules": {
          "style": { "noDefaultExport": "off" },
          "suspicious": { "noShadowRestrictedNames": "off" }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
